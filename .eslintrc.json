{
  "plugins": [
      "react",
      "react-hooks"
  ],
  "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
  },
  "env": {
      "es2021":  true,
      "browser": true,
      "node":    true,
      "mocha":   true,
      "jest": true
  },
  "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
  ],
  "rules": {
    "semi": [2, "always"],
    "indent": ["error", 2],
    "object-curly-spacing": ["error", "always"],
    "no-extra-parens": "error",
    "max-len": ["error", { "code": 80 }],
    "no-multi-spaces": "error",
    "eol-last": "error",
    "react/react-in-jsx-scope": "off"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
